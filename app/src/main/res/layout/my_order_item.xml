<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp"
    android:background="@drawable/black_border">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/ordered_pro_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fruits"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ordered_pro_name"
                android:fontFamily="@font/alice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="20sp"
                android:textStyle="bold"  />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity : "
                    android:textSize="16sp"
                    android:fontFamily="@font/alice"/>

                <TextView
                    android:id="@+id/ordered_pro_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 kg"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alice"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Price "
                    android:textSize="16sp"
                    android:fontFamily="@font/alice"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/ordered_pro_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹30"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alice"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Quantity : "
                    android:textSize="16sp"
                    android:fontFamily="@font/alice"/>

                <TextView
                    android:id="@+id/ordered_total_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 kg"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alice"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price : ₹"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/alice"/>

                <TextView
                    android:id="@+id/ordered_pro_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alice"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/alice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:" />

                <TextView
                    android:id="@+id/ordered_pro_status"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/alice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ordered"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>